# grep
# alias grep='grep --color=auto --exclude-dir={.bzr,CVS,.git,.hg,.svn}
# using ripgrep instead of gnu grep
# https://github.com/BurntSushi/ripgrep
alias grep=rg
alias cat=bat
alias time='hyperfine'
alias ci='code-insiders'

# ls
# https://the.exa.website
alias ls='exa -al --color=always --group-directories-first' # my preferred listing
alias l='exa -F'
alias ll='exa -lF'
alias la='exa -aF'
alias lla='exa -aFl'
alias lg='exa -aFl --git'
# alias la='exa -a --color=always --group-directories-first'  # all files and dirs
alias ll='exa -l --color=always --group-directories-first'  # long format
alias lt='exa -aT --color=always --group-directories-first' # tree listing
alias etree='exa --tree'


# df hide tmpfs
alias df='df -h -x tmpfs '

# confirm before overwriting something
alias cp="cp -i"
alias mv='mv -i'
alias rm='rm -i'

# copy content to clipboard
alias pbcopy='xclip -selection clipboard'
alias pbpaste='xclip -selection clipboard -o'

# Easier navigation: .., ..., ...., ....., ~ and -
alias ..="cd .."
alias ...='cd ../..'
alias .3='cd ../../..'
alias .4='cd ../../../..'
alias ~="cd ~" # `cd` is probably faster to type though
alias -- -="cd -"


# Shortcuts for Direcory
alias docs="cd ~/Documents"
alias dl="cd ~/Downloads"
alias pics="cd ~/Pictures"

# Aliases
# cp -Rv means:
	# -R : copy directories recursively, every files from folder
	# -v : Verbose output, show what's going under the hood
alias cp='cp -Rv'

alias ls='ls -ACF'
alias mkdir='mkdir -pv'
alias mv='mv -v'
# resume getting a partially-downloaded file or start from beginning if not downloaded
alias wget='wget -c'

