#!/bin/bash

alias pbcopy='xclip -selection clipboard'
alias pbpaste='xclip -selection clipboard -o'

# Easier navigation: .., ..., ...., ....., ~ and -
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~" # `cd` is probably faster to type though
alias -- -="cd -"

# Shortcuts for Direcory
alias doc="cd ~/Documents"
alias dl="cd ~/Downloads"

# Aliases
# cp -Rv means:
	# -R : copy directories recursively, every files from folder
	# -v : Verbose output, show what's going under the hood
alias cp='cp -Rv'

alias ls='ls --color=auto -ACF'
alias ll='ls --color=auto -alF'
alias grep='grep --color=auto'
alias mkdir='mkdir -pv'
alias mv='mv -v'
# resume getting a partially-downloaded file or start from beginning if not downloaded
alias wget='wget -c'

# ----------------------------------
#		GIT ALIASES
# ----------------------------------

copied 90% from git.plugins.zsh @ohmyzsh
# Pretty log messages
function _git_log_prettily(){
  if ! [ -z $1 ]; then
    git log --pretty=$1
  fi
}
compdef _git _git_log_prettily=git-log

alias gadd='git add'
alias gaa='git add --all'

alias gb='git branch'
alias gba='git branch -a'
alias gbd='git branch -d'
alias gbr='git branch --remote'


alias gc='git commit -v'
alias gcam='git commit -a -m'
alias gcsm='git commit -s -m'

alias gcom='git commit'
alias gst='git status'
alias gcb='git checkout -b'
alias gcm='git checkout master'
alias gco='git checkout'

alias gd='git diff'

alias glo='git log --oneline --decorate --color'
alias glol='git log --graph --pretty=format:'\''%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'\'' --abbrev-commit'

alias gr='git remote'
alias gra='git remote add'

